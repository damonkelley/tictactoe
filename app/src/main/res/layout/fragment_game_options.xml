<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.damonkelley.tictactoe_app.fragment.GameOptions">
    <LinearLayout
        android:orientation="vertical"
        android:dividerPadding="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/player_1" />

            <Spinner
                android:id="@+id/player_one_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ToggleButton
                android:id="@+id/player_one_marker"
                android:textOn="@string/marker_x"
                android:textOff="@string/marker_o"
                android:checked="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/player_2" />

            <Spinner
                android:id="@+id/player_two_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ToggleButton
                android:id="@+id/player_two_marker"
                android:textOn="@string/marker_x"
                android:textOff="@string/marker_o"
                android:checked="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
